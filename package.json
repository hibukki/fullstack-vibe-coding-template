{
  "name": "fullstack-vibe-coding",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "init": "pnpm install && pnpm exec playwright install chromium && cp .env.example .env.local && convex login && convex dev --once || true && claude ${RUNNING_IN_CONTAINER:+--dangerously-skip-permissions} '/init-app'",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "tsc -b && vite build",
    "lint": "tsc -b && eslint .  --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.45.0",
    "@convex-dev/react-query": "0.0.0-alpha.8",
    "@tanstack/react-form": "^1.19.3",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-router": "^1.131.28",
    "@tanstack/react-router-devtools": "^1.131.28",
    "convex": "^1.26.2",
    "lucide-react": "^0.511.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/router-plugin": "^1.131.28",
    "@types/node": "^22.18.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "convex-helpers": "^0.1.104",
    "daisyui": "^5.0.54",
    "dotenv": "^17.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "zod": "^4.1.5"
  }
}
